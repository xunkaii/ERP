@charset "UTF-8";

.chatBox{
	display: none;
	position: fixed;
	right: 20px;
	bottom: 60px;
}
.chat-button {
    position: fixed;
    bottom: 10px;
    right: 10px;
    background-color: #007bff;
    color: white;
    padding: 10px;
    cursor: pointer;
    border-radius: 5px;
}

.chat-box {
    position: fixed;
    bottom: 5px;
    right: 10px;
    background-color: white;
    border: 1px solid #ccc;
    box-shadow: 0 2px 5px rgba(0, 0, 0, 0.1);
    width: 280px;
    height: 300px;
    border-radius: 5px;
    display: none;
    flex-direction: column;
}

.chat-header {
    background-color: #007bff;
    color: white;
    padding: 5px 10px;
    border-top-left-radius: 5px;
    border-top-right-radius: 5px;
    font-weight: bold;
}

.chat-messages {
    overflow-y: auto;
    padding: 10px;
    font-size: 12px;
    height: 100%;
}

#chatInput {
    padding: 6px;
    border: none;
    border-top: 1px solid #ccc;
    width: 100%;
    box-sizing: border-box;
    font-size: 15px;
    margin-bottom: 0;
}
.close-button {
    background-color: transparent;
    border: none;
    color: #333;
    font-size: 15px;
    cursor: pointer;
    outline: none;
    padding: 0;
    margin-left: auto;
    float: right;
}

.close-button:hover {
    color: #ff3333;
}